{
    "name": "yara",
    "displayName": "YARA",
    "description": "Syntax highlighting and snippets support for the YARA pattern matching language",
    "homepage": "https://github.com/infosec-intern/textmate-yara/blob/master/README.md",
    "icon": "images/logo.png",
    "license": "SEE LICENSE IN LICENSE.md",
    "main": "./out/src/extension.js",
    "publisher": "infosec-intern",
    "version": "1.2.0",
    "categories": [
        "Languages",
        "Snippets"
    ],
    "keywords": [
        "yara",
        "malware",
        "pattern"
    ],
    "galleryBanner": {
        "color": "#A4A4A4",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/infosec-intern/textmate-yara"
    },
    "bugs": {
        "url": "https://github.com/infosec-intern/textmate-yara/issues"
    },
    "engines": {
        "vscode": "^1.0.0"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "mocha"
    },
    "activationEvents": [
        "onLanguage:yara"
    ],
    "contributes": {
        "configuration": {
            "title": "YARA Settings",
            "properties": {
                "yara.installPath": {
                    "type": ["string", null],
                    "default": null,
                    "description": "The folder path to your YARA binaries. Null means the 'yara' and 'yarac' commands are in your $PATH"
                },
                "yara.args": {
                    "type": ["string", null],
                    "default": null,
                    "description": "Optional arguments for YARA commands"
                },
                "yara.target": {
                    "type": ["string", null],
                    "default": null,
                    "description": "Destination file for the ExecuteRule command (yara.exe)"
                },
                "yara.compiled": {
                    "type": ["string"],
                    "default": "~\\AppData\\Local\\yara_tmp.bin",
                    "description": "Destination file for the CompileRule command (yarac.exe)"
                }
            }
        },
        "commands": [
            {
                "command": "yara.CompileRule",
                "title": "YARA: Compiles the current file into a YARA rule."
            },
            {
                "command": "yara.ExecuteRule",
                "title": "YARA: Executes the current file against a chosen target file (specified in yara.target setting)"
            }
        ],
        "grammars": [
            {
                "language": "yara",
                "scopeName": "source.yara",
                "path": "syntaxes/yara.tmLanguage"
            }
        ],
        "languages": [
            {
                "id": "yara",
                "aliases": [
                    "Yara",
                    "yara-syntax",
                    "yaralang",
                    "YARA"
                ],
                "extensions": [
                    ".yara",
                    ".yar"
                ],
                "configuration": "./yara-language-configuration.json"
            }
        ],
        "snippets": [
            {
                "language": "yara",
                "path": "snippets/yara.json"
            }
        ]
    }
}