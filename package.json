{
    "name": "yara",
    "displayName": "YARA",
    "description": "Syntax highlighting and snippets support for the YARA pattern matching language",
    "homepage": "https://github.com/infosec-intern/textmate-yara/blob/master/README.md",
    "icon": "images/logo.png",
    "license": "SEE LICENSE IN LICENSE.md",
    "main": "./out/src/main",
    "publisher": "infosec-intern",
    "version": "1.1.1",
    "galleryBanner": {
        "color": "#A4A4A4",
        "theme": "dark"
    },
    "keywords": [
        "yara",
        "malware",
        "pattern"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/infosec-intern/textmate-yara"
    },
    "bugs": {
        "url": "https://github.com/infosec-intern/textmate-yara/issues"
    },
    "engines": {
        "vscode": "^1.0.0"
    },
    "devDependencies": {
        "typescript": "^1.8.5",
        "vscode": "^0.11.0"
    },
    "scripts": {
        "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
        "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "categories": [
        "Languages",
        "Snippets"
    ],
    "activationEvents": [               // covers when to load this extension (e.g. YARA file opened or command 'showMessage')
        "onLanguage:yara",
        "onCommand:yara.ShowMessage"
    ],
    "contributes": {                    // lists what the extension will do
        "configuration": {
            "title": "YARA Settings",
            "properties": {
                "yara.installPath": {
                    "type": ["string", "null"],
                    "default": "yara",
                    "description": "The folder path to your YARA binaries. If this is 'null', some commands will not work. The default assumes the 'yara' and 'yarac' commands are in your $PATH"
                },
                "yara.timeout": {
                    "type": ["integer"],
                    "default": 30,
                    "description": "Number of seconds to abort after a YARA scan starts"
                }
            }
        },
        "commands": [
            {
                "command": "yara.CompileRule",
                "title": "YARA: Compiles the current file into a YARA rule."
            },
            {
                "command": "yara.TestRule",
                "title": "YARA: Test the current YARA rulefile against a sample."
            }
        ],
        "grammars": [
            {
                "language": "yara",
                "scopeName": "source.yara",
                "path": "syntaxes/yara.tmLanguage"
            }
        ],
        "languages": [
            {
                "id": "yara",
                "aliases": [
                    "yara-syntax",
                    "yaralang",
                    "YARA",
                    "Yara"
                ],
                "extensions": [
                    ".yara",
                    ".yar"
                ],
                "configuration": "./yara-language-configuration.json"
            }
        ],
        "snippets": [
            {
                "language": "yara",
                "path": "snippets/yara.json"
            }
        ]
    }
}