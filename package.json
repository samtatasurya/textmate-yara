{
    "name": "yara",
    "displayName": "YARA",
    "description": "Syntax highlighting and snippets support for the YARA pattern matching language",
    "homepage": "https://github.com/infosec-intern/textmate-yara/blob/master/README.md",
    "icon": "images/logo.png",
    "license": "SEE LICENSE IN LICENSE.md",
    "main": "out/src/extension.js",
    "publisher": "infosec-intern",
    "version": "1.2.0",
    "categories": [
        "Languages",
        "Snippets"
    ],
    "keywords": [
        "yara",
        "malware",
        "pattern",
        "security"
    ],
    "galleryBanner": {
        "color": "#A4A4A4",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/infosec-intern/textmate-yara"
    },
    "bugs": {
        "url": "https://github.com/infosec-intern/textmate-yara/issues"
    },
    "engines": {
        "vscode": "^1.0.0"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.44",
        "@types/node": "^6.0.90",
        "mocha": "^2.3.3",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6"
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "mocha"
    },
    "activationEvents": [
        "onLanguage:yara"
    ],
    "contributes": {
        "configuration": {
            "title": "YARA Settings",
            "properties": {
                "yara.compileOnSave": {
                    "type": [
                        "boolean"
                    ],
                    "default": true,
                    "description": "Determines if the CompileRule command will run when files are saved. Default is 'true'. If changed, you'll need to reload your window"
                },
                "yara.installPath": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "The folder path to your YARA binaries. Null means the 'yara' and 'yarac' commands are in your $PATH"
                },
                "yara.compiled": {
                    "type": [
                        "string"
                    ],
                    "default": "~/.yara_tmp.bin",
                    "description": "Destination file for the CompileRule command"
                },
                "yara.compileFlags": {
                    "type": [
                        "string[]",
                        "null"
                    ],
                    "default": null,
                    "description": "Command-line flags for running the yarac compiler. Can be either a string array or null"
                },
                "yara.commands": {
                    "type": [
                        "boolean"
                    ],
                    "default": true,
                    "description": "Determines if YARA commands are presented or not. Similar to previous extension functionality. Must be set to True for the other settings to have any effect"
                }
            }
        },
        "commands": [
            {
                "command": "yara.CompileRule",
                "title": "YARA: Compiles the current file into a YARA rule."
            }
        ],
        "grammars": [
            {
                "language": "yara",
                "scopeName": "source.yara",
                "path": "syntaxes/yara.tmLanguage"
            }
        ],
        "languages": [
            {
                "id": "yara",
                "aliases": [
                    "Yara",
                    "yara-syntax",
                    "yaralang",
                    "YARA"
                ],
                "extensions": [
                    ".yara",
                    ".yar"
                ],
                "configuration": "yara-language-configuration.json"
            }
        ],
        "snippets": [
            {
                "language": "yara",
                "path": "snippets/yara.json"
            }
        ]
    }
}
