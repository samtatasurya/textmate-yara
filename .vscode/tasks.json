{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "echoCommand": true,
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "watch",
            "command": "gulp",
            "args": ["watch"],
            "isShellCommand": true,
            "isBuildCommand": true,
			"problemMatcher": "$tsc"
		},
        {
            "taskName": "tsc",
            "command": "${workspaceRoot}\\node_modules\\.bin\\tsc",
            "isShellCommand": true,
            "args": ["-p", "${workspaceRoot}"],
            "problemMatcher": "$tsc"
        }
    ]
}