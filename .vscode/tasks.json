{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "echoCommand": true,
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "tsc",
            "command": "${workspaceRoot}/node_modules/.bin/tsc",
            "isShellCommand": true,
            "args": ["-p", "${workspaceRoot}"],
            "problemMatcher": "$tsc",
            "isBuildCommand": true
        },
        {
            "taskName": "install",
            "command": "npm",
            "args": ["install"]
        },
        {
            "taskName": "update",
            "command": "npm",
            "args": ["update"]
        },
        {
            "taskName": "test",
            "command": "npm",
            "args": ["run", "test"]
        }
    ]
}